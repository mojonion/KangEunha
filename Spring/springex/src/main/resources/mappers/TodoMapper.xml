<?xml version="1.0" encoding="UTF-8" ?>
<!-- mybatis 맵퍼 관련 자동완성이 나오도록 하는 설정 -->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace : sql을 실행하기 위한 인터페이스를 연결하는 부분 -->
<mapper namespace="org.zerock.springex.mappers.TodoMapper">
    <!-- sql을 작성 부분 : select, insert, update, delete-->
    <!-- id:인터페이스에 작성한 메서드이름-->
    <!-- resultType : 반환타입 -->
    <select id="getTime" resultType="string">
        SELECT now()
    </select>
    <insert id="insert">
        INSERT INTO todo (title, dueDate, writer)
            VALUES (#{title}, #{dueDate}, #{writer})
    </insert>
    <select id="selectAll" resultType="org.zerock.springex.vo.TodoVO">
        SELECT
            tno, title, dueDate, finished, writer
        FROM todo
        ORDER BY tno DESC
    </select>
    <select id="selectById" resultType="org.zerock.springex.vo.TodoVO">
        SELECT
            tno, title, dueDate, finished, writer
        FROM todo
        WHERE tno = #{tno}
    </select>
    <delete id="deleteById">
        DELETE FROM todo WHERE tno = #{tno}
    </delete>
    <update id="updateById">
        UPDATE todo
        SET title=#{title}, dueDate=#{dueDate}, finished=#{finished}
        WHERE tno=#{tno}
    </update>
    <select id="selectSearch" resultType="org.zerock.springex.vo.TodoVO">
        SELECT * FROM todo
        <include refid="search"></include>
        ORDER BY tno DESC
        LIMIT #{skip}, #{size}
    </select>
    <select id="getCount" resultType="int">
        SELECT COUNT(tno)
        FROM todo
        <include refid="search"></include>
    </select>
    <!-- where 안에 주석이든 쿼리든 내용이 들어 있다면 WHERE 추가해주는 명령어 -->
    <!-- <foreach collection="배열, 리스트" item="꺼낸 데이터" open="시작 문자열" close="종료 문자열" separator="반복시 추가할 문자열"> -->
    <sql id="search">
        <where>
            <if test="types != null and types.length > 0">
                <foreach collection="types" item="type" open="(" close=")" separator="OR">
                    <if test="type == 't'.toString()">
                        title LIKE concat('%', #{keyword}, '%')
                    </if>
                    <if test="type == 'w'.toString()">
                        writer LIKE concat('%', #{keyword}, '%')
                    </if>
                </foreach>
            </if>
            <if test="finished">
                <trim prefix="AND">
                    finished = 1
                </trim>
            </if>
            <if test="from != null and to != null">
                <trim prefix="AND">
                    dueDate BETWEEN #{from} AND #{to}
                </trim>
            </if>
        </where>
    </sql>
</mapper>